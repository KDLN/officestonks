{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && go build -o bin/api cmd/api/main.go"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd backend && ./bin/api",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}